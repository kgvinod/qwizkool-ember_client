<div class="container">
  <div class="row">
    <h2>Sections </h2>
    <hr/>

    {{#if isSectionAddFormEnabled}}

    <div class="panel panel-primary">
    <div class="panel-heading clearfix">
      <div class="panel-title">Add a new section</div>
      <p class="bg-danger">{{errorMessage}}</p>
    </div>
    <div class="panel-body">

    <form role="form" {{action "saveSection" on="submit"}}>
      <div class="form-group">
        <label for="sectionTitle">Title</label>
        {{ input type="text" class="form-control" id="sectionTitle" placeholder="Title" value=title }}
      </div>
      <button type="submit"  value="Save" class="btn btn-default">Save</button>
      <button class="btn btn-default"  {{action "disableSectionAddForm"}} >Cancel</button>
    </form>
   </div>
 </div>

    {{else}}
      <div class="btn-group btn-addSection" role="group">
        <button type="button" class="btn btn-default btn-danger" {{action "enableSectionAddForm" }}>Add Section</button>
      </div>
    {{/if}}


  {{#each section in model}}

  <div class="panel panel-default">
    <div class="panel-heading clearfix">
      <div class="pull-right">
        <div class="btn-group" role="group">
          <button type="button" class="btn btn-default " {{ action "editSection" this }}><i class="fa fa-pencil fa-1x"></i></button>
        </div>
      </div>
      </div>
    <div class="panel-body">
      {{section.title }}
    </div>
  </div>
  {{/each}}
</div>

</div>
