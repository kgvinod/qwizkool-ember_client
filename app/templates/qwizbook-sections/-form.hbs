<div class="container">
  <div class="row">
    <h1><small>Section Information </small></h1>
    <hr/>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <u class="lead">{{errorMessage}}</u>
      </div>
      <div class="panel-body">

        <form role="form" {{action "save" on="submit"}}>
          <div class="form-group">
            <label for="sectionTitle">Title</label>
            {{ input type="text" class="form-control" id="sectionTitle" placeholder="Title" value=title }}
          </div>
          <div class="form-group">
            <div class="checkbox">
              <label>
                {{ input type="checkbox" id="starting-section"  name="isStarting" checked=isStarting }} Starting section ?
              </label>
            </div>
          </div>
          <button type="submit"  value="Save" class="btn btn-default">Save</button>
          <button class="btn btn-default"  {{action "cancel"}} >Cancel</button>
        </form>
      </div>
    </div>
  </div>
</div>
