<div class="container">

  <div class="row">
    <ol class="breadcrumb">
      <li>{{#link-to "qwizbooks.index"  class="active" }}Qwizbooks{{/link-to}}</li>
      <li><a>Qwizbook</a></li>
      <li><a>Sections</a></li>
      <li><a>Pages</a></li>
    </ol>
  </div>

  <div class="row">
    <div class="col-xs-12 col-md-6 col-sm-6 col-lg-6">
      <div class="row">
        <h2>Pages</h2>
      </div>
    </div>
    <div class="col-xs-12 col-md-6 col-sm-6 col-lg-6">
      <div class="row">
        <div class="pull-right">
          <div class="btn-group btn-addSection" role="group">
            <button type="button" class="btn btn-default btn-danger" {{action "addNewPage" }}>Add Page</button>
          </div>
        </div>
      </div>

    </div>
  </div>


  <div class="row">

    {{#each page in model}}

    {{#if section.isStarting}}
    <div class="panel panel-primary">
      {{else}}
      <div class="panel panel-default">
        {{/if}}
        <div class="panel-heading clearfix">
          <div class="pull-right">
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default " {{ action "editQwizbookSection" section }}><i class="fa fa-pencil fa-1x"></i></button>
            </div>
          </div>
        </div>
        <div class="panel-body">
          {{page.title }}
        </div>
      </div>
      {{/each}}
    </div>

  </div>
</div>
