<div class="container">
  <div class="row">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <div class="panel-title">Add a new page</div>
        <u class="lead">{{errorMessage}}</u>
      </div>
      <div class="panel-body">

        <form role="form" {{action "save" on="submit"}}>
          <div class="form-group">
            <label for="pageType">Type</label>
            {{view "Ember.Select"
            content=types
            value=type
            class="form-control" id="pageType"
            }}
          </div>

          <div class="form-group">
            <label for="pageText">Text</label>
            {{ textarea  class="form-control" type="text" id="pageText"   placeholder="Text" value=text rows="10" }}
          </div>
          <div class="form-group">
          </div>
          <button type="submit"  value="Save" class="btn btn-default">Save</button>
          <button class="btn btn-default"  {{action "cancel"}} >Cancel</button>
        </form>
      </div>
    </div>
  </div>
</div>
