<div class="container">
  <div class="row">
    <h1><small>Page Information </small></h1>
    <hr/>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="panel panel-primary">
      <div class="panel-heading clearfix">
        <u class="lead">{{errorMessage}}</u>
      </div>
      <div class="panel-body">

        <form role="form" {{action "save" on="submit"}}>
          <div class="form-group">
            <label for="pageType" class="control-label">Page Type</label>
            {{view "Ember.Select"
            content=types
            value=type
            class="form-control" id="pageType"
          }}
        </div>

        <div class="form-group">
          <label for="pageText" class="control-label">Question Text</label>
          {{ textarea  class="form-control" type="text" id="pageText"   placeholder="Text" value=text rows="10" }}
        </div>


        <hr/>
          <div class="form-group">
            <label for="pageMediaElements" class="control-label">Media Elements</label>
            <div class="text-right">
            <div class="btn-group btn-section" id="pageMediaElements" role="group">
            <button type="button" class="btn btn-default btn-danger" {{action "addNewMediaElements" }}>Add Media Element</button>
          </div>
        </div>
      </div>

        {{#each mediaElement in model.mediaUrls itemController="media-urls/item"}}
          <div class="well">
            <div class="form-group">
              <label  class="control-label">Media Type</label>
              {{view "Ember.Select"
              content=mediaElement.urlTypes
              value=mediaElement.type
              selection=mediaElement.type
              class="form-control"
            }}
            <label  style="margin-top: 10px" class="control-label">Text</label>
            {{ input type="text" class="form-control"  placeholder="URL" value=mediaElement.text }}
            <label  style="margin-top: 10px" class="control-label">URL</label>
            {{ input type="text" class="form-control"  placeholder="URL" value=mediaElement.mediaUrl }}
          </div>
        </div>
      {{/each}}

      <hr/>
      {{media-urls mediaUrls=model.mediaUrls removeItem="removeMediaElement"}}
      <hr/>

        <div class="form-group">
          <label for="pageChoiceElements" class="control-label">Answer Choices</label>
          <div class="text-right">
            <div class="btn-group btn-section" id="pageChoiceElements" role="group">
            <button type="button" class="btn btn-default btn-danger" {{action "addNewChoiceElements" }}>Add Choice</button>
          </div>
        </div>
      </div>

      {{#each choiceElement in model.choices itemController="media-urls/item"}}
      <div class="well">
        <h4>Choice:{{_view.contentIndex}} </h4>

        <div class="form-group">
        <label  style="margin-top: 10px" class="control-label">Answer Text</label>
        {{ input type="text" class="form-control"  placeholder="URL" value=choiceElement.text }}

        <label  style="margin-top: 10px" class="control-label">Media Text</label>
        {{ input type="text" class="form-control"  placeholder="URL" value=choiceElement.mediaText }}
        <label  style="margin-top: 10px" class="control-label">Image URL</label>
        {{ input type="text" class="form-control"  placeholder="URL" value=choiceElement.mediaUrl }}
        <div class="checkbox">
          <label>
            {{ input type="checkbox"   name="answer" checked=choiceElement.answer }} Answer ?
          </label>
        </div>

      </div>
    </div>
    {{/each}}
    <hr/>

      <div class="form-group">
        <label for="pageWeight" class="control-label">Question Weight</label>
        {{view "Ember.Select"
        content=types
        value=type
        class="form-control" id="pageWeight"
      }}
    </div>

      <button type="submit"  value="Save" class="btn btn-default">Save</button>
      <button class="btn btn-default"  {{action "cancel"}} >Cancel</button>
    </form>
  </div>
</div>
</div>
</div>



