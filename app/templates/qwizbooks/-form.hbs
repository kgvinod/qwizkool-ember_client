<div class="container">  <div class="row">    <div class="panel panel-primary">      <div class="panel-heading clearfix">        <div class="panel-title">Add/Edit a new Qwizbook</div>        <p class="bg-danger">{{errorMessage}}</p>      </div>      <div class="panel-body">      <form role="form" {{action "save" on="submit"}}>  <div class="form-group">    <label for="bookTitle">Title</label>    {{ input type="text" class="form-control" id="bookTitle" placeholder="Title" value=title }}  </div>  <div class="form-group">    <label for="bookSubtitle">Subtitle</label>    {{ input type="text" class="form-control" id="bookSubtitle" placeholder="Subtitle" value=subtitle }}  </div>  <div class="form-group">    <label for="bookDescription">Description</label>    {{ textarea  class="form-control" type="text" id="bookDescription"  value=description rows="10" }}  </div>  <div class="form-group">    <label for="bookTags">Tags</label>    {{ input type="text" class="form-control" id="bookTags" placeholder="tags" value=tags }}  </div>  <button type="submit"  value="Save" class="btn btn-default">Save</button>    <button class="btn btn-default"  {{action "cancel"}} >Cancel</button>  </form></div></div></div></div>