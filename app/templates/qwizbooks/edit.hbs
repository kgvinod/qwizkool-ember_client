<div class="container">
  <div class="row">
    <ol class="breadcrumb">
      <li>{{#link-to "qwizbooks.index"  class="active" }}Qwizbooks{{/link-to}}</li>
      <li><a>Qwizbook</a></li>
      <li><a>Edit Qwizbook</a></li>
    </ol>
  </div>
</div>


{{partial "qwizbooks/form"}}


<div class="container">
  <div class="row">
    <div class="pull-right">
      <div class="btn-group btn-addSection" role="group">
        <button type="button" class="btn btn-default btn-danger" {{action "addNewSection" this }}>Add Section</button>
      </div>
    </div>
  </div>
</div>

<div class="container">

  <div class="row">

    {{#each section in model.qwizbookSections}}

    {{#if section.isStarting}}
    <div class="panel panel-primary">
      {{else}}
      <div class="panel panel-default">
        {{/if}}
        <div class="panel-heading clearfix">
          <div class="pull-right">
            <div class="btn-group" role="group">
              <button type="button" class="btn btn-default " {{ action "editQwizbookSection" section }}><i class="fa fa-pencil fa-1x"></i></button>
            </div>
          </div>
        </div>
        <div class="panel-body">
          {{section.title }}
        </div>
      </div>
      {{/each}}
    </div>

  </div>
</div>


{{outlet}}
