
<div class="container">
  <div class="row">
    <ol class="breadcrumb">
      <li>{{#link-to "qwizbooks.index"  class="active" }}Qwizbooks{{/link-to}}</li>
      <li><a>Detail</a></li>
    </ol>
  </div>
</div>

<div class="container">
  <div class="panel panel-default qwizbook-summary-item">
    <div class="panel-body">

      <div class="col-xs-4 col-md-4 col-sm-4 col-lg-4">
        <div class="row">
          {{#if hasImageUrl}}
          <img src="http://bootsnipp.com/apple-touch-icon-114x114-precomposed.png" alt="bootsnipp"
          class="img-rounded img-responsive" />

          {{else}}
          <i class="fa fa-question-circle fa-5x"></i>
          {{/if}}

        </div>
        <div class="row">
          <span class="glyphicon glyphicon-heart"></span>
          <span class="glyphicon glyphicon-heart"></span>
          <span class="glyphicon glyphicon-heart"></span>
          <span class="glyphicon glyphicon-heart"></span>
          <span>(36)</span>
        </div>
        <div class="row">
          <span class="glyphicon glyphicon-comment"></span>
          <span>(100)</span>
        </div>


      </div>

      <div class="col-xs-8 col-md-8 section-box">
        <h2>

          {{link-to title "qwizbooks.detail" this}}

        </h2>
        <h5>
          {{subtitle}}
        </h5>
        <p>
          {{description}}
        </p>

        <div class="row ">
          <hr />
          <div class="pull-right">
            <div class="btn-group btn-toolbar" role="group">
              <button type="button" class="btn btn-default " {{ action "editQwizbook" this }}><i class="fa fa-pencil fa-1x"></i></button>
              <button type="button" class="btn btn-default btn-primary" {{ action "startQwiz"  this}}>Start Qwiz<i class="fa fa-question fa-1x"></i></button>
            </div>
          </div>

        </div>
      </div>

    </div>
  </div>

</div>

{{outlet}}
