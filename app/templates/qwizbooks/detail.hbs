
<div class="container">
  <div class="row">
    <ol class="breadcrumb">
      <li>{{#link-to "qwizbooks.index"  class="active" }}Qwizbooks{{/link-to}}</li>
      <li><a>Detail</a></li>
    </ol>
  </div>
</div>

<div class="container">
  <div class="row">

    <div class="box">
      <div class="btn-group btn-toolbar" role="group">
        <button type="button" class="btn btn-default " {{ action "editQwizbook" this }}><i class="fa fa-pencil fa-1x"></i></button>
      </div>

      <div class="box-icon">
        {{#if hasImageUrl}}
        <div class="embed">
          <img class="img-responsive img-center" alt="Responsive image" src="http://bootsnipp.com/apple-touch-icon-114x114-precomposed.png" >
        </div>

        {{else}}
        <span class="fa fa-question-circle fa-4x"></span>
        {{/if}}

      </div>

      <div>
        <span class="glyphicon glyphicon-heart"></span>
        <span class="glyphicon glyphicon-heart"></span>
        <span class="glyphicon glyphicon-heart"></span>
        <span class="glyphicon glyphicon-heart"></span>
        <span>(36)</span>
      </div>
      <div>
        <span class="glyphicon glyphicon-comment"></span>
        <span>(100)</span>
      </div>
      <div class="info">
        <h4 class="text-left">
          {{model.title}}
          <small>{{model.subtitle}} </small>
        </h4>
      </div>
      <hr/>
      <p class="text-left">
        {{model.description}}
      </p>

      <hr/>
      <div class="box-icon box-icon-right" type="button" {{ action "startQwiz" this }} style="cursor:pointer">
        <span class="fa fa-2x fa-chevron-right"></span>
      </div>

    </div>


  </div>

</div>

{{outlet}}
