
<div class="container">

  <div class="row">

  <ol class="breadcrumb">
    <li><a>Home</a></li>
    <li>{{#link-to "qwizbooks.index"  class="active" }}Qwizbooks{{/link-to}}</li>
  </ol>
</div>
<div class="row">
  <div class="pull-right">
    <div class="btn-group qwizbook-index-toolbar" role="group">
      <button type="button" class="btn btn-default btn-danger" {{action "addQwizbook" }}>Add Qwizbook</button>
    </div>
  </div>
</div>

  <div class="row well">
    <div class="input-group search-control">

      {{!-- The value "search is defined as query param in the index controller" --}}
      {{ input type="text" class="form-control"  placeholder="Search Qwizbooks" value=search}}

      <span class="input-group-btn">

        <button class="btn btn-default" type="button" {{action "clearSearch" }}>
          <span class="fa fa-times fa-1x"></span>
        </button>

      </span>
    </div>
  </div><!-- /input-group -->

</div><!-- /container -->

<div class="container">
  <div class="row">

    {{#each  qwizbook in model itemController="qwizbooks/item"}}
      <div class="panel panel-default qwizbook-summary-item">
        <div class="panel-body">

          <div class="col-xs-4 col-md-4 col-sm-4 col-lg-4">
            <div class="row">
            {{#if qwizbook.hasImageUrl}}
            <img src="http://bootsnipp.com/apple-touch-icon-114x114-precomposed.png" alt="bootsnipp"
            class="img-rounded img-responsive" />

            {{else}}
                <i class="fa fa-question-circle fa-5x"></i>
            {{/if}}

          </div>
          <div class="row">
            <span class="glyphicon glyphicon-heart"></span>
            <span class="glyphicon glyphicon-heart"></span>
            <span class="glyphicon glyphicon-heart"></span>
            <span class="glyphicon glyphicon-heart"></span>
            <span>(36)</span>
          </div>
          <div class="row">
            <span class="glyphicon glyphicon-comment"></span>
            <span>(100)</span>
          </div>


          </div>

          <div class="col-xs-8 col-md-8 section-box">
            <h2>

              {{link-to title "qwizbooks.detail" qwizbook}}

            </h2>
            <h5>
              {{qwizbook.subtitle}}
            </h5>
            <p>
              {{qwizbook.description}}
            </p>

            <div class="row ">
              <hr />
              <div class="pull-right">
                <div class="btn-group btn-toolbar" role="group">
                  <button type="button" class="btn btn-default btn-primary" {{ action "showDetail" qwizbook }}><i class="fa fa-arrow-right"></i></button>
                </div>
              </div>

            </div>
          </div>

        </div>
      </div>
    {{/each}}

  </div>
</div>
